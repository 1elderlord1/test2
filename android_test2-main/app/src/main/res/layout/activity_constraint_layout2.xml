<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a237e"
    android:padding="16dp">

    <!-- 顶部图标 -->
    <ImageView
        android:id="@+id/spaceStationIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/space_station_icon"
        android:contentDescription="Space Station"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spaceStationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Space Station"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/spaceStationIcon"
        app:layout_constraintTop_toTopOf="@+id/spaceStationIcon" />

    <ImageView
        android:id="@+id/singleArrowIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/single_arrow"
        android:contentDescription="Single Arrow"
        app:layout_constraintStart_toEndOf="@+id/spaceStationText"
        app:layout_constraintTop_toTopOf="@+id/spaceStationText" />

    <!-- 中间部分 -->
    <LinearLayout
        android:id="@+id/middleSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceStationIcon">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/rover_icon"
                android:contentDescription="Rovers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rovers"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/rocket_icon"
                android:contentDescription="Flights" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flights"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DCA"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- 火星图片 -->
    <ImageView
        android:id="@+id/marsImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/galaxy"
        android:contentDescription="Mars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleSection"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/marsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARS"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marsImage"
        android:layout_marginTop="8dp" />

    <!-- 底部控制区域 -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="One Way"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Traveller"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- 出发按钮 -->
    <Button
        android:id="@+id/departButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPART"
        android:textColor="#fff"
        android:backgroundTint="#ff5252"
        app:layout_constraintBottom_toTopOf="@+id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/doubleArrowIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/double_arrows"
        android:contentDescription="Double Arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>